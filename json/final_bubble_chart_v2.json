{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": "Urbanization & Relative Purchasing Power(RPP) & GDP per Capita on Housing Prices",
  "data": {
    "url": "https://raw.githubusercontent.com/letriet/FIT3179_ASGN2/main/asgn2.csv"
  },
  "params": [
    {
      "name": "urbanization_category",
      "bind": {
        "input": "select",
        "options": [null, "High", "Moderate", "Low"],
        "labels": [
          "Show All",
          "High Urbanization",
          "Moderate Urbanization",
          "Low Urbanization"
        ],
        "name": "Urbanization Category Filter"
      }
    }
  ],
  "transform": [
    {
      "filter": "urbanization_category == null || datum.urbanization_class == urbanization_category"
    }
  ],
  "encoding": {
    "x": {
      "field": " gdp_per_capita ",
      "type": "quantitative",
      "title": "GDP per Capita ($USD)",
      "scale": {"zero": false}
    },
    "y": {
      "field": "urbanization_index",
      "type": "quantitative",
      "title": "Urbanization Index",
      "scale": {"zero": false}
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "pts",
          "select": {
            "type": "point",
            "fields": ["urbanization_class"],
            "toggle": false
          }
        },
        {
          "name": "urbanization_legend",
          "select": {"type": "point", "fields": ["urbanization_class"]},
          "bind": "legend"
        }
      ],
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "value_of_100",
          "type": "quantitative",
          "title": "RPP ($USD)",
          "scale": {
            "type": "threshold",
            "domain": [90, 100, 110],
            "range": [100, 200, 300, 400],
            "reverse": true
          },
          "legend": {"format": ".2s"}
        },
        "color": {
          "condition": {
            "param": "pts",
            "field": "urbanization_class",
            "title": "Urbanization Category",
            "type": "ordinal",
            "scale": {"scheme": "dark2"}
          },
          "value": "grey"
        },
        "opacity": {
          "condition": {"param": "urbanization_legend", "value": 0.8},
          "value": 0.2
        },
        "tooltip": [
          {"field": "state", "type": "ordinal", "title": "State"},
          {
            "field": " gdp_per_capita ",
            "type": "quantitative",
            "title": "GDP per Capita ($USD)",
            "format": "$"
          },
          {
            "field": "value_of_100",
            "type": "quantitative",
            "title": "RPP of $100 USD",
            "format": "$"
          },
          {
            "field": "urbanization_class",
            "type": "ordinal",
            "title": "Urbanization Category"
          }
        ]
      }
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Helvetica",
      "titleFont": "Helvetica",
      "titleFontSize": 10,
      "titleAnchor": "middle"
    },
    "legend": {
      "labelFont": "Helvetica",
      "titleFont": "Helvetica",
      "labelFontSize": 10
    },
    "header": {"labelFont": "Helvetica", "titleFont": "Helvetica"},
    "mark": {"font": "Helvetica"},
    "title": {
      "font": "Helvetica",
      "subtitleFont": "Helvetica",
      "anchor": "end",
      "fontSize": 12.5
    },
    "background": "#F3E8E2"
  }
}
