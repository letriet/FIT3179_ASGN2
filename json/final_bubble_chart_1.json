{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 600,
  "title": "Population & Density & Crime Rate's Impact on Housing Prices",
  "data": {
    "url": "https://raw.githubusercontent.com/letriet/FIT3179_ASGN2/main/asgn2.csv"
  },
  "encoding": {
    "y": {
      "field": " medianHomePrice ",
      "type": "quantitative",
      "title": "Average Median Price of House ($USD)"
    },
    "x": {
      "field": "crime_rate",
      "type": "quantitative",
      "title": "Crime Rate Per 100k",
      "scale": {"zero": false}
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "pts",
          "select": {
            "type": "point",
            "fields": ["population_class"],
            "toggle": false
          }
        },
        {
          "name": "industry_legend",
          "select": {"type": "point", "fields": ["population_class"]},
          "bind": "legend"
        }
      ],
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "population_density",
          "type": "quantitative",
          "title": "Population Density (sq.mi)",
          "scale": {
            "type": "threshold",
            "domain": [100, 400, 800],
            "range": [100, 250, 375, 500]
          },
          "legend": {"format": ".2s"}
        },
        "color": {
          "condition": {
            "param": "pts",
            "field": "population_class",
            "title": "State's Population Category",
            "type": "nominal",
            "scale": {"scheme": "dark2"}
          },
          "value": "grey"
        },
        "opacity": {
          "condition": {"param": "industry_legend", "value": 0.8},
          "value": 0.2
        },
        "tooltip": [
          {"field": "state", "type": "ordinal", "title": "State"},
          {
            "field": " medianHomePrice ",
            "type": "quantitative",
            "title": "Average Housing Price ($USD)",
            "format": "$"
          },
          {
            "field": "crime_rate",
            "type": "quantitative",
            "title": "Crime Rate per 100k"
          },
          {
            "field": "population_density",
            "type": "quantitative",
            "title": "Population Per Square Mile"
          },
          {
            "field": " population_states ",
            "type": "quantitative",
            "title": "Total Population of State"
          },
          {
            "field": "population_class",
            "type": "ordinal",
            "title": "Population Category"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "line-bottom",
        "dx": 15,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "state", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['state'] == 'California' || datum['state'] == 'New York' ||datum['state'] == 'New Jersey'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Helvetica",
      "titleFont": "Helvetica",
      "titleFontSize": 12.5,
      "titleAnchor": "middle"
    },
    "legend": {
      "labelFont": "Helvetica",
      "titleFont": "Helvetica",
      "labelFontSize": 12.5
    },
    "header": {"labelFont": "Helvetica", "titleFont": "Helvetica"},
    "mark": {"font": "Helvetica"},
    "title": {
      "font": "Helvetica",
      "subtitleFont": "Helvetica",
      "anchor": "start",
      "fontSize": 20
    },
    "background": "#F3E8E2"
  }
}